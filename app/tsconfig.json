{
  // "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
    "../env.d.ts",
    "src/**/*",
    "src/**/*.vue"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "src/**/*.spec.ts",
    "src/**/*.spec.js",
    "src/**/*.spec.tsx",
    "src/**/*.spec.jsx",
    "src/_boilerplate/**/*",
    "src/__check/**/*",
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "build",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "module": "ESNext",
    "target": "ES2020",
    "useDefineForClassFields": true,
    "isolatedModules": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "esModuleInterop": true,
    "jsx": "preserve",
    "strict": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "verbatimModuleSyntax": false,
    "types": [
      "node",
      "vitest",
      "vite/client",
      "vite-plugin-pages/client",
      "jquery",
      "bootstrap",
    ],
  },
  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}